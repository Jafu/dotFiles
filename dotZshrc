export FZF_DEFAULT_COMMAND='ag --hidden --ignore .git --ignore codemetrics -g ""'

_fzf_compgen_path() {
	ag --hidden --ignore .git --depth=-1 -g "" "$1"
	# ag -g "" "$1"
}

